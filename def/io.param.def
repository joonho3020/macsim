/* General IO */
param<CLOCK_IO, clock_io, float, 0.8>

/* CME */
param<CME_ENABLE, cme_enable, bool, false>
param<CME_RANGE, cme_addr_min, uint64_t, 0>
param<CME_LATENCY, cme_latency, long, 300>

/* PCIe */
param<PCIE_LANES, pcie_lanes, int, 8>
param<PCIE_PER_LANE_BW, pcie_per_lane_bw, float, 32>

param<PCIE_VC_CNT, pcie_vc_cnt, int, 2>
param<PCIE_TXVC_CAPACITY, pcie_txvc_capacity, int, 8>
param<PCIE_RXVC_CAPACITY, pcie_rxvc_capacity, int, 8>

param<PCIE_TXDLL_CAPACITY, pcie_txdll_capacity, int, 8>

param<PCIE_PHYS_CAPACITY, pcie_phys_capacity, int, 8>
param<PCIE_TXREPLAY_CAPACITY, pcie_txreplay_capacity, int, 8>

/* Latency related */
param<PCIE_TXTRANS_LATENCY, pcie_txtrans_latency, uint64_t, 5>
param<PCIE_TXDLL_LATENCY, pcie_txdll_latency, uint64_t, 5>
param<PCIE_RXTRANS_LATENCY, pcie_rxtrans_latency, uint64_t, 5>
param<PCIE_RXDLL_LATENCY, pcie_rxdll_latency, uint64_t, 5>
param<PCIE_ARBMUX_LATENCY, pcie_arbmuax_latency, uint64_t, 2>

/* Flit related */
param<PCIE_MAX_MSG_PER_FLIT, pcie_max_msg_per_flit, int, 4>
param<PCIE_FLIT_BITS, pcie_flit_bits, int, 544>
param<PCIE_DATA_SLOTS_PER_FLIT, pcie_data_slots_per_flit, int, 4>